{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "NODE_ENV=development tsc && jest tests --colors",
    "test:unit": "NODE_ENV=development tsc && jest tests/units --colors",
    "test:integration": "NODE_ENV=development tsc && jest tests/integration --colors",
    "db": "knex --knexfile=./dist/app/database/knexfile.js"
  },
  "jest": {
    "roots": [
      "tests/"
    ],
    "verbose": true,
    "bail": 1,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "!src/**/constants.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90,
        "statements": 90,
        "branches": 90,
        "functions": 90
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "joi": "^17.4.1",
    "knex": "^0.95.7",
    "sqlite3": "^5.0.2"
  }
}
